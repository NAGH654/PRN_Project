{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "identity-route": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        }
      },
      "core-subjects-route": {
        "ClusterId": "core-cluster",
        "Match": {
          "Path": "/api/subjects/{**catch-all}"
        }
      },
      "core-exams-route": {
        "ClusterId": "core-cluster",
        "Match": {
          "Path": "/api/exams/{**catch-all}"
        }
      },
      "core-grades-route": {
        "ClusterId": "core-cluster",
        "Match": {
          "Path": "/api/grades/{**catch-all}"
        }
      },
      "core-sessions-route": {
        "ClusterId": "core-cluster",
        "Match": {
          "Path": "/api/sessions/{**catch-all}"
        }
      },
      "storage-submissions-route": {
        "ClusterId": "storage-cluster",
        "Match": {
          "Path": "/api/submissions/{**catch-all}"
        }
      },
      "storage-files-route": {
        "ClusterId": "storage-cluster",
        "Match": {
          "Path": "/api/files/{**catch-all}"
        }
      },
      "storage-nested-zip-route": {
        "ClusterId": "storage-cluster",
        "Match": {
          "Path": "/api/nestedzip/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "identity-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://identity-service:80"
          }
        }
      },
      "core-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://core-service:80"
          }
        }
      },
      "storage-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://storage-service:80"
          }
        }
      }
    }
  },
  "Jwt": {
    "SecretKey": "YourSuperSecretKeyForJwtTokenGeneration123456",
    "Issuer": "AssignmentGradingSystem",
    "Audience": "AssignmentGradingUsers"
  }
}
